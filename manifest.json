{
    "manifest_version": 3,
    "name": "Extensión para descargar videos",
    "description": "Es una extensión básica de aprendizaje",
    "version": "1.0",
    "action": {
      "default_icon": "images/legion.png"
    },
    "icons": {
      "16": "images/legion.png",
      "32": "images/legion.png",
      "64": "images/legion.png",
      "128": "images/legion.png"
    },
    "content_scripts": [
      {
        "matches": ["https://escuelafullstack.com/slides/slide/*"],
        "js": ["scripts/download.js"]
      }
    ]
  }